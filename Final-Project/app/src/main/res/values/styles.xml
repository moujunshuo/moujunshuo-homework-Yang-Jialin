<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->

    <style name="DayTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="toolbarTheme">@style/ThemeOverlay.AppCompat.ActionBar</item>
        <item name="colorPrimary">@color/white</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/grey9</item>
        <item name="colorAccent">@color/greyC</item>
        <item name="tvBackground">@color/white</item>
        <item name="lvBackground">@color/near_white</item>

        <item name="menu_delete_all">@drawable/ic_main_delete_forever_24</item>
        <item name="menu_delete">@drawable/ic_main_delete_24</item>
        <item name="menu_search">@drawable/ic_baseline_search_24</item>
        <item name="settingIcon">@drawable/ic_baseline_settings_24</item>

        <item name="titleColor">@color/black</item>
        <item name="tvMainColor">@color/black</item>
        <item name="tvSubColor">@color/grey9</item>
        <item name="colorControlActivated">@color/grey9</item>
        <item name="colorSwitchThumbNormal">@color/black</item>
        <!--背景色-->
        <item name="android:windowBackground">@color/white</item>
    </style>
    <style name="NightTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="toolbarTheme">@style/ThemeOverlay.AppCompat.ActionBar</item>
        <item name="colorPrimary">@color/black</item>
        <item name="android:textColorPrimary">@color/darkgrey</item>
        <item name="colorPrimaryDark">@color/darkpurple</item>
        <item name="colorAccent">@color/grey9</item>
        <item name="tvBackground">@color/black</item>
        <item name="lvBackground">@color/black</item>

        <item name="menu_delete_all">@drawable/ic_main_delete_forever_24</item>
        <item name="menu_delete">@drawable/ic_main_delete_24</item>
        <item name="menu_search">@drawable/ic_baseline_search_24</item>
        <item name="settingIcon">@drawable/ic_baseline_settings_24</item>

        <item name="titleColor">@color/near_white</item>
        <!--设置界面的字色-->
        <item name="tvMainColor">@color/grey9</item>
        <item name="tvSubColor">@color/white</item>
        <!--开关选定后的颜色-->
        <item name="colorControlActivated">@color/grey9</item>
        <item name="colorSwitchThumbNormal">@color/white</item>
        <!--背景色-->
        <item name="android:windowBackground">@color/black</item>
        <!--编辑界面的那一根分界线-->
        <item name="android:colorForeground">@color/white</item>
    </style>

</resources>